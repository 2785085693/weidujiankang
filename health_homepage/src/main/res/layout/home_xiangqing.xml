<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/circle_ImageView"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/left"
                />

            <TextView
                android:layout_width="210dp"
                android:layout_height="28dp"
                android:text="咨询详情"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selectling"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#C7C4C4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:text="1"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="钱多多"
            android:textColor="#333"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2018-12-21"
            android:textColor="#333"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2018-12-21"
            android:textColor="#333"

            />


        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_168"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:lineHeight="@dimen/dp_20"
            android:text="111"
            android:textColor="#333"
            />


        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/common_button_share_n"
            android:layout_gravity="right"
            android:layout_marginTop="-170dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/comment_list_icon_adoption_n"
            android:layout_gravity="right"
            android:layout_marginTop="-154dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>


</LinearLayout>