<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <FrameLayout
            android:id="@+id/flVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true" />

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:src="@drawable/common_icon_time_out_n"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/ivCoverx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ivCover"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-40dp"
            android:src="@drawable/common_icon_toll_n"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/ivCoverxx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ivCoverx"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/xingxing1"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />
                <ImageView
            android:id="@+id/ivCoverxxx"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@id/ivCoverxx"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/common_icon_open_live_commenting_n"
            android:layout_alignParentRight="true"
           />
           <TextView
            android:id="@+id/text_TextView"
            android:layout_width="30dp"
            android:layout_height="25dp"
               android:text="3万人 已预约"
               android:textSize="10sp"
            android:layout_below="@id/ivCoverxxx"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/gradient_video_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_video_bottom" />

    <EditText
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:hint="视频好看吗？快来评论吧~"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textColor="@android:color/white"
        android:textColorHint="#80ffffff"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rlLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvComment">

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="#40ffffff" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlLine"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="..."
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>